<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-5">
            <h2 class="text-center">Create New Account</h2>
            <form action="/signup" method="POST">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" name="Name" placeholder="Enter Name" id="" class="form-control">
                </div>
                <div class="form-group">
                    <label for="">Email address</label>
                    <input type="email" name="Email" placeholder="Enter Email Address" id="" class="form-control">

                </div>
                <div class="form-group">
                    <label for="">Password</label>
                    <input type="password" name="Password" placeholder="Password" id="" class="form-control">
                </div>
                <a href="/login" style="text-decoration: none;">Already have an account ?</a>
                <button type="submit" class="btn btn-primary mt-2" style="float: right;">Login</button>
            </form>
        </div>
    </div>
</div>