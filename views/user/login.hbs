<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-5">
            <h2 class="text-center">Login</h2>
            <form action="/login" method="POST">
            {{#if loginErr}}
                <p class="error">{{loginErr}}</p>
            {{/if}}
                <div class="form-group">
                    <label for="">Email address</label>
                    <input type="email" name="Email" placeholder="Enter Email Address" id="" class="form-control">

                </div>
                <div class="form-group">
                    <label for="">Password</label>
                    <input type="password" name="Password" placeholder="Password" id="" class="form-control">
                </div>
                <a href="/signup" style="text-decoration: none;">Create new account ?</a>
                <button type="submit" class="btn btn-primary mt-2" style="float: right;" onclick="">Login</button>
            </form>
        </div>
    </div>
</div>